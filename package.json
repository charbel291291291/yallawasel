{
  "name": "yallawasel-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build:customer": "npm --prefix apps/main run build",
    "build:driver": "npm --prefix apps/driver run build",
    "verify:no-root-dist": "node -e \"if (require('fs').existsSync('dist')) { console.error('Root dist forbidden'); process.exit(1); }\""
  },
  "devDependencies": {
    "react-is": "^19.2.4"
  }
}